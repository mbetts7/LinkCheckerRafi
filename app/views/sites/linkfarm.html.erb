<h3>My Link Farm</h3>

<table>
	<tr>
    <th>Link</th>
    <th>Comment</th>
  </tr>
  <tr>
    <% url = 'https://www.yahoo.com' %>
  	<td><%= link_to url, url %></td><td>A Search Engine</td>
  </tr>
  <tr>
  	<% url = 'https://www.google.com' %>
  	<td><%= link_to url, url %></td><td>Another Search Engine</td>
  </tr>
  <tr>
  	<% url = 'https://www.amazon.com/testing/testing/testing' %>
  	<td><%= link_to url, url %></td><td>A Made Up Amazon URL</td>
  </tr>
  <tr>
  	<% url = 'https://www.google.com/mysite/that/doesnt/exist' %>
  	<td><%= link_to url, url %></td><td>A Search Engine with a bad link</td>
  </tr>
</table>

<% @sites.each do |s| %>
  <%= s.url %>
    <ul>
    <% s.links.each do |l| %>
    
      <li><%= l.url %></li>
    <% end %>
    </ul>
<% end %>
